    "setupFilesAfterEnv": [
      "jest-expect-message"
    ]
  },
  "type": "module",
  "scripts": {
    "editor-support": "node node/editorSupport.js",
    "rig-init": "npm install --loglevel=error --no-audit --no-fund && composer install --quiet",
    "generateCert": "gulp generateCert",
    "build:js": "node build-js.js",
    "dev:js": "node build-js.js --dev",
    "lint:js": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint \"assets/js/src/**/*.{js,jsx,ts,tsx}\"",
    "build:css": "node build-css.js",
    "dev:css": "node build-css.js --dev",
    "lint:css": "node lint-css.js",
    "watch:js": "node build-js.js",
    "watch:css": "npm run build:css && chokidar 'src/styles/**/*.css' -c 'npm run build:css'",
    "dev": "node scripts/cli.js dev",
    "dev:gulp": "gulp",
    "build": "node scripts/cli.js build",
    "build:phpcs": "node scripts/cli.js build --phpcs",
    "build:gulp": "gulp build",
    "images": "gulp images",
    "bundle": "cross-env NODE_ENV=production node scripts/cli.js bundle",
    "bundle:phpcs": "cross-env NODE_ENV=production node scripts/cli.js bundle --phpcs",
    "bundle:gulp": "cross-env NODE_ENV=production gulp bundle",
    "bundle:check-all": "cross-env NODE_ENV=production node scripts/cli.js bundle --phpcs"
  }
